@inject HttpClient http
@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="CallBackend">Call backend</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private async void CallBackend()
    {
        var client = new HttpClient();
        var url = $"{AppState.Configuration.BackendUrl}/todos";
        try {

            var todos = await http.GetFromJsonAsync<TodoItem[]>(url);
            Console.WriteLine(todos);
        } catch (Exception e) {
            Console.WriteLine(e);
        }
    }
}
